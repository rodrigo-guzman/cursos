<% include partials/_header %>
<div class="container">
    <div class="row">
            <div class="col-md-5 offset-md-3">
                    <div class="card">
                        <div class="card-body">
                            <form action="/edit/<%= course._id%>" method="POST">
                                <div class="form-group">
                                    <input type="text" name="title" placeholder="inserte un titulo" class="form-control" value="<%=course.title%>">
                                </div>
                                <div class="form-group">
                                        <textarea name="description" cols="80" class="form-control" placeholder="Inserte una descripcion"><%=course.description%></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">
                                    Actualizar
                                </button>
                            </form>
                        </div>
                    </div>
            </div>
    </div>
</div>
<% include partials/_footer %>